<?xml version="1.0"?>
<!--
/**
 * Jscriptz SmartShipping - REST API Configuration
 *
 * Exposes transit time data for frontend components
 */
-->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Get transit times for a cart -->
    <route url="/V1/smartshipping/transit-times/:cartId" method="GET">
        <service class="Jscriptz\SmartShipping\Api\TransitTimeManagementInterface" method="getByCartId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- Get all transit times from session -->
    <route url="/V1/smartshipping/transit-times" method="GET">
        <service class="Jscriptz\SmartShipping\Api\TransitTimeManagementInterface" method="getAll"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- ═══════════════════════════════════════════════════════════════════════
         Shipment Automation Endpoints
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Create shipment with label -->
    <route url="/V1/smartshipping/shipment/label/:orderId" method="POST">
        <service class="Jscriptz\SmartShipping\Api\ShipmentServiceInterface" method="createWithLabel"/>
        <resources>
            <resource ref="Magento_Sales::ship"/>
        </resources>
    </route>

    <!-- Create shipment with manual tracking number -->
    <route url="/V1/smartshipping/shipment/tracking/:orderId" method="POST">
        <service class="Jscriptz\SmartShipping\Api\ShipmentServiceInterface" method="createWithTracking"/>
        <resources>
            <resource ref="Magento_Sales::ship"/>
        </resources>
    </route>

    <!-- Check if label is available for an order -->
    <route url="/V1/smartshipping/shipment/label-available/:orderId" method="GET">
        <service class="Jscriptz\SmartShipping\Api\ShipmentServiceInterface" method="isLabelAvailable"/>
        <resources>
            <resource ref="Magento_Sales::ship"/>
        </resources>
    </route>

</routes>
